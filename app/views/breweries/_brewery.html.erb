<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
  </h2>
  <p>
    <em>
      <%="Established in: #{ brewery.year}" %>
    </em>
  </p>
  <p>
    <strong>Beers count:</strong>
    <%= brewery.beers.count %>
  </p>
  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>

  <% if brewery.ratings.empty? %>
  <p>
    Brewery has not yet been rated!
  </p>
  <% else %>
    <p>
      Brewery has <%= pluralize(brewery.ratings.count, 'rating') %> with an average of <%= brewery.average_rating(brewery.ratings) %>
    </p>
  <% end %>
</div>
