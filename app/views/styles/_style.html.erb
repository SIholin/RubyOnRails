<div id="<%= dom_id style %>">
  <p>
    <strong>Name:</strong>
    <%= style.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= style.description %>
  </p>

  <p>
    <strong>Beers count:</strong>
    <%= style.beers.count %>
  </p>
  <ul>
    <% style.beers.each do |beer| %>
    <li>
      <%= link_to beer.name, beer %>
    </li>
    <% end %>
  </ul>


</div>
